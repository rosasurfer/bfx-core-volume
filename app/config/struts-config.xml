<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config SYSTEM "struts-config.dtd">

<struts-config>

    <imports>
        <import value="rosasurfer/bfx/controller/actions/*"/>
    </imports>


    <global-forwards>
        <forward name="redirect.home"  redirect="/"/>
    </global-forwards>


    <action-mappings>
        <mapping name="home"           path="/"  include="home.phtml"/>
        <mapping name="check-license"  path="/Paypal/TFV/index.php"  action="CheckLicenseAction"/>
    </action-mappings>

</struts-config>
